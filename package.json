{
  "name": "universal-resume",
  "version": "1.0.6",
  "description": "Resume website template that works on a monitor, paper, and phone.",
  "author": "WebPraktikos <hi@webpraktikos.com>",
  "scripts": {
    "serve": "concurrently \"postcss ./tailwind.css -o public/styles.css --watch\"  \"live-server ./public \"",
    "dev": "cross-env NODE_ENV=dev postcss ./tailwind.css -o public/styles.css",
    "public": "cross-env NODE_ENV=public postcss ./tailwind.css -o public/styles.css"
  },
  "dependencies": {
    "autoprefixer": "^9.5.1",
    "tailwindcss": "^1.0.1"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.2.0",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "cssnano": "^4.1.10",
    "live-server": "^1.2.1",
    "postcss-cli": "^6.1.2"
  }
}
